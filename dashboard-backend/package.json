{
  "name": "dashboard-backend",
  "version": "1.0.0",
  "description": "Backend semplice per dashboard aziendale",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "mocha test/**/*.test.js --timeout 10000 --exit",
    "test:watch": "mocha test/**/*.test.js --timeout 10000 --watch",
    "test:coverage": "nyc --reporter=html --reporter=text mocha test/**/*.test.js --timeout 10000 --exit",
    "test:unit": "mocha test/unit/**/*.test.js --timeout 5000 --exit",
    "test:integration": "mocha test/integration/**/*.test.js --timeout 10000 --exit",
    "test:security": "node test-security.js",
    "test:all": "npm test && npm run test:security"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
