# EditorConfig: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,mjs,cjs}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# Package files
[package.json]
indent_size = 2
