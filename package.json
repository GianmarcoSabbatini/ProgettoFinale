{
  "name": "coreteam-digital-dashboard",
  "version": "1.0.0",
  "description": "Dashboard aziendale integrata per CoreTeam Digital",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd dashboard-backend && node server.js",
    "dev:frontend": "cd dashboard-frontend && npm run dev",
    "start": "npm run dev",
    "test": "npm run test:backend",
    "test:backend": "cd dashboard-backend && npm test",
    "install:all": "npm install && cd dashboard-backend && npm install && cd ../dashboard-frontend && npm install",
    "clean": "rimraf node_modules dashboard-backend/node_modules dashboard-frontend/node_modules",
    "setup": "npm run install:all"
  },
  "keywords": [
    "dashboard",
    "hr",
    "timesheet",
    "payroll"
  ],
  "author": "CoreTeam Digital",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
